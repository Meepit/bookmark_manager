<center>
  <h1>Bookmark</h1>
  <ul id='links'>
    <% @links.each do |link| %>
      <li>
        Title: <%= link.title %>
        URL:   <%= link.url   %>
        Tag:   <% link.tags.each do |tag| %> ;
          <%= tag.name %>
          <% end %>
      </li>
    <% end %>
  </ul>
  <form action="/tag-filters" method="post">
    Seach by a tag:
    <input type="text" name="tag"><br>
    <input type="submit" value="Submit"><br>
  </form>
</center>
